pipeline {
    agent { label 'master' }
    options {
      timestamps()
    }
    stages {
        stage('Build') {
            agent {label 'Ruby'}
            steps {
                script {
                   def mybase = pullRequest.base
                }
                echo mybase
                echo 'Building...'
                sh "ip address"
            }
        }
        stage('Test on Linux') {
            steps {
                sh "pwd"
                echo 'testing'
                sh "whoami"
            }
        }
        stage('Test on Windows') {
            agent {
                label 'Ruby'
            }
            steps {
               echo 'deploying'
               sh "git branch"
            }
        }
    }
}
